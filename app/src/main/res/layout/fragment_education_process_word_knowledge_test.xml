<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#FF9999">

            <TextView
                android:id="@+id/activityMain_fragmentEducationProcessWordKnowledgeTest_translation_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRANSLATION_STUB"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_margin="15dp"/>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="2">

                <ImageView
                    android:id="@+id/activityMain_fragmentEducationProcessKnowledgeTest_wordImageOptionOne_ImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:contentDescription="Word Image"/>

                <ImageView
                    android:id="@+id/activityMain_fragmentEducationProcessKnowledgeTest_wordImageOptionTwo_ImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:contentDescription="Word Image"/>

                <ImageView
                    android:id="@+id/activityMain_fragmentEducationProcessKnowledgeTest_wordImageOptionThree_ImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:contentDescription="Word Image"/>

                <ImageView
                    android:id="@+id/activityMain_fragmentEducationProcessKnowledgeTest_wordImageOptionFour_ImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:contentDescription="Word Image"/>
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#CCCCCC">

            <TextView
                android:id="@+id/activityMain_fragmentEducationProcessWordKnowledgeTest_word_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WORD_STUB"
                android:textSize="26sp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/activityMain_fragmentEducationProcessWordKnowledgeTest_result_ImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:contentDescription="Test result image"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/activityMain_fragmentEducationProcessKnowledgeTest_learningLanguageFlag_ImageView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_gravity="start|top"
        android:scaleType="fitStart"
        android:contentDescription="Learning Language Flag"/>

    <ImageView
        android:id="@+id/activityMain_fragmentEducationProcessKnowledgeTest_nativeLanguageFlag_ImageView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_gravity="end|bottom"
        android:scaleType="fitEnd"
        android:contentDescription="Native Language Flag"/>
</FrameLayout>