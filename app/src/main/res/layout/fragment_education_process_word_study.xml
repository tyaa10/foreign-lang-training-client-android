<?xml version="1.0" encoding="utf-8"?>
<!-- <androidx.constraintlayout.widget.ConstraintLayout -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#FF9999">

            <TextView
                android:id="@+id/activityMain_fragmentEducationProcessWordStudy_translation_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRANSLATION_STUB"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:id="@+id/activityMain_fragmentEducationProcessWordStudy_translation_pronunciation_ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play_sound"/>
        </LinearLayout>


        <TextView
            android:id="@+id/activityMain_fragmentEducationProcessWordStudy_word_TextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="WORD_STUB"
            android:textSize="26sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#CCCCCC"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/activityMain_fragmentEducationProcessWordStudy_learningLanguageFlag_ImageView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_gravity="start|top"
        android:scaleType="fitStart"
        android:contentDescription="Learning Language Flag"/>

    <ImageView
        android:id="@+id/activityMain_fragmentEducationProcessWordStudy_wordImage_ImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:contentDescription="Word Image"/>

    <ImageView
        android:id="@+id/activityMain_fragmentEducationProcessWordStudy_nativeLanguageFlag_ImageView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_gravity="end|bottom"
        android:scaleType="fitEnd"
        android:contentDescription="Native Language Flag"/>

    <ImageView
        android:id="@+id/activityMain_fragmentEducationProcessWordStudy_next_ImageView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="50dp"
        android:scaleType="centerCrop"
        android:tooltipText="next"
        android:src="@drawable/next_arrow"/>

</FrameLayout>